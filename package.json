{
  "name": "chant",
  "version": "2.0.0",
  "repository": "git@github.com:otiai10/chant.git",
  "author": "Hiromu OCHIAI <otiai10@gmail.com>",
  "license": "MIT",
  "scripts": {
    "prestart": "yarn install",
    "start": "webpack --config ./client/webpack.config.js --watch --progress",
    "build": "webpack --config ./client/webpack.config.js --progress",
    "release": "NODE_ENV=production yarn run build"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.0.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.24.1",
    "css-loader": "^0.28.4",
    "eslint": "^3.19.0",
    "eslint-plugin-react": "^7.0.1",
    "extract-text-webpack-plugin": "^2.1.2",
    "firebase": "^4.0.0",
    "node-sass": "^4.5.3",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-redux": "^5.0.5",
    "react-text-anchorize": "^0.0.7",
    "redux": "^3.6.0",
    "sass-loader": "^6.0.5",
    "style-loader": "^0.18.2",
    "webpack": "^2.6.1"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaFeatures": {
        "experimentalObjectRestSpread": true,
        "jsx": true
      },
      "sourceType": "module"
    },
    "plugins": [
      "react"
    ],
    "rules": {
      "indent": [
        "error",
        2
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always"
      ],
      "react/jsx-indent": [
        "error",
        2
      ]
    },
    "globals": {
      "chant": false
    }
  },
  "dependencies": {
    "babel-preset-stage-0": "^6.24.1"
  }
}
