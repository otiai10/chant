# Routes

# セッションが無ければログイン画面, あればチャットルームをレンダリングする
GET     /                                       Application.Index
# Twitterログイン用のページ
GET     /login                                  Application.Login
GET     /logout                                 Application.Logout

# TwitterのOAuth用のエンドポイント
GET     /auth                                   Auth.Index
GET     /auth/callback                          Auth.Callback

# スタティックpath
GET     /public/*filepath                       Static.Serve("public")
GET     /favicon.ico                            Static.Serve("public","img/icon.chant.png")

# ｳｪｯﾌﾞソケットｩコネクション
WS      /websocket/room/socket                  ChantSocket.RoomSocket

# syncなAPIのエンドポイント
GET     /api/v1/room/:id/stamps                 APIv1.RoomStamps
GET     /api/v1/room/:id/messages               APIv1.RoomMessages
POST    /api/v1/room/:id/messages               APIv1.RoomSay
GET     /api/v1/preview                         APIv1.WebPreview
POST    /api/v1/room/:id/upload                 APIv1.FileUpload
